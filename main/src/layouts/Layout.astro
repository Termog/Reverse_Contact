---
import Header from "../components/Header.astro";
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			rel="stylesheet"
			href="https://unpkg.com/flowbite@1.5.4/dist/flowbite.min.css"
		/>
		<script src="https://cdn.tailwindcss.com"></script>
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
		/>
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />


	<!-- Javascript code -->
	<script>
		var mainNav = document.getElementById("main-nav");
		var toggleMenuIcon = document.getElementById("toggle-menu-icon");

		function toggleMenu() {
			mainNav.classList.toggle("hidden");

			// change the icon when the menu is shown/closed
			toggleMenuIcon.classList.toggle("fa-bars");
			toggleMenuIcon.classList.toggle("fa-times");
		}
	</script>
	<script>
		function DropDown() {
			document.querySelector("#dropdownNavbar").classList.toggle("hidden");
			document
				.querySelector("#dropdownNavbarLink")
				.classList.toggle("rotate-0");
		}

		window.onclick = function (event) {
			var dropdownNavbarLink = document.getElementById("dropdownNavbarLink");
			var Navbar = document.getElementById("dropdownNavbar");
			if (
				!dropdownNavbarLink.contains(event.target) &&
				!Navbar.classList.contains("hidden")
			) {
				Navbar.classList.add("hidden");
			}
		};
	</script>

	<script src="https://unpkg.com/flowbite@1.5.4/dist/flowbite.js"></script>
	</body>
</html>
